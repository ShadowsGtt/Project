#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int main()
{
    int i = 0 ;
    int j = 0;
    int n = 9;
    int a[20] = {1,7,12,16,50,60,80,87,95,100};
    printf("\n未插入数字的有序数列:\n");
    for(i = 0 ; i < 10 ; i ++)
    {
        printf("%-4d",a[i]);
    }
        while(j <= n)
        {
            if(n == 20)
                break;
             int ran = rand()%100;
            if(ran <= a[0])
            {
                for( i = n;i >= 0;i-- )
                {
                    a[i+1] = a[i];
                }
                a[0] = ran;
                n++;
                continue;
            }
            if(ran <= a[j] && ran >= a[j-1])
            {
                for(i =  n;i >= j;i-- )
                {
                    a[i+1] = a[i];
                }
                a[j] = ran;
                n++;
                continue;
            }
            if (ran >= a[n])
            {
                a[n+1] = ran;
                n++;
                continue;
            }
            j++;

        }
        printf("\n插入数字后的有序数列:\n");
    for( i = 0 ; i < 20 ; i ++)
    {
        printf("%-4d",a[i]);
    }

    return 0;
}
